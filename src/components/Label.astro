---
export interface Props {
  text: string;
  variant?: 'default' | 'small' | 'muted';
  class?: string;
}

const { 
  text,
  variant = 'default',
  class: className = '' 
} = Astro.props;

const variantClasses = {
  default: 'text-color-text-light text-sm',
  small: 'text-color-text-light text-xs',
  muted: 'text-color-text-light text-sm opacity-75'
};
---

<span class={`label ${variantClasses[variant]} ${className}`}>
  {text}
</span>

<style>
  .label {
    display: block;
    text-align: center;
    margin-top: var(--spacing-xs);
    line-height: 1.3;
  }

  .text-color-text-light {
    color: var(--color-text-light);
  }

  .text-sm {
    font-size: 0.875rem;
  }

  .text-xs {
    font-size: 0.75rem;
  }

  .opacity-75 {
    opacity: 0.75;
  }
</style> 