{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": false,
        "arrowParens": "always",
        "bracketSpacing": true,
        "bracketSameLine": false
      }
    }
  ]
}
